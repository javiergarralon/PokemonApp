<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DevelopedWithKotlin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/poke_red</item>
    </style>


    <style name="Title1">
        <item name="android:fontFamily">@font/pokefont</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Title2">
        <item name="android:fontFamily">@font/pokefont</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/pokefont</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Little">
        <item name="android:fontFamily">@font/pokefont</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/pokefont</item>
        <item name="android:textColorHint">@color/poke_white</item>
        <item name="android:editTextColor">@color/poke_white</item>
        <item name="android:textColorPrimary">@color/poke_white</item>
        <item name="android:textColorSecondary">@color/poke_white</item>
        <item name="android:tint">@color/poke_white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>